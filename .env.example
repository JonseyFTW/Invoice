# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoice_db
DB_USER=postgres
DB_PASS=your_secure_database_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-gmail-app-password

# Alternative SMTP Configuration (if not using Gmail)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USER=your-username
# SMTP_PASS=your-password
# SMTP_SECURE=true

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key

# Company Information
COMPANY_NAME=Your Business Name
COMPANY_ADDRESS=Your Business Address, City, State ZIP
COMPANY_PHONE=(555) 123-4567
COMPANY_EMAIL=your-business@email.com

# Application Settings
DEFAULT_TAX_RATE=8.25
FRONTEND_URL=http://localhost:3000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# Performance Settings
CACHE_TTL=300
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

# Optional: Custom domain for production
# FRONTEND_URL=https://yourdomain.com
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem