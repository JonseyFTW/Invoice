# Environment
NODE_ENV=production

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=invoice_db
DB_USER=postgres
DB_PASS=your_secure_password_here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key

# Company Information
COMPANY_NAME=Home Repair Solutions
COMPANY_ADDRESS=123 Main St, City, State 12345
COMPANY_PHONE=(555) 123-4567
COMPANY_EMAIL=info@homerepair.com
COMPANY_WEBSITE=https://homerepair.com

# Default Settings
DEFAULT_TAX_RATE=8.25
DEFAULT_PAYMENT_TERMS=30
INVOICE_NUMBER_PREFIX=INV

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_API_URL=http://localhost:5000/api

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Feature Flags
RECURRING_INVOICES_ENABLED=true
EXPENSE_TRACKING_ENABLED=true
AI_RECEIPT_PARSING_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# Development Settings (only for NODE_ENV=development)
DEV_SEED_DATA=false
DEV_ENABLE_CORS=true
DEV_MOCK_EMAIL=false