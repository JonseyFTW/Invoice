{
  "name": "invoice-backend",
  "version": "1.0.0",
  "description": "Invoice Management System Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node migrations/runMigrations.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seedData.js",
    "build": "npm ci --only=production",
    "railway:migrate": "npm run migrate",
    "railway:start": "npm run railway:migrate && npm start",
    "docker:build": "docker build -t invoice-backend .",
    "docker:run": "docker run -p 5000:5000 invoice-backend",
    "clean": "rm -rf logs/* uploads/receipts/* uploads/invoice_pdfs/*",
    "health": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "keywords": [
    "invoice",
    "billing",
    "business",
    "accounting",
    "express",
    "nodejs",
    "postgresql"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "puppeteer": "^21.6.1",
    "axios": "^1.6.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.11",
    "date-fns": "^2.30.0",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1",
    "express-brute": "^1.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "archiver": "^6.0.1",
    "mime-types": "^2.1.35",
    "sanitize-filename": "^1.6.3",
    "validator": "^13.11.0",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/invoice-management.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/invoice-management/issues"
  },
  "homepage": "https://github.com/yourusername/invoice-management#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/models/index.js",
      "!src/config/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "consistent-return": "off",
      "max-len": ["error", { "code": 120 }]
    }
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}